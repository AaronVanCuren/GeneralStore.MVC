@model IEnumerable<GeneralStore.MVC.Models.Product>

@{
    ViewBag.Title = "Products";
}

<h2>List of Products</h2>

<p>
    @Html.ActionLink("Add a product", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

    @foreach (var product in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelProduct => product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelProduct => product.Price)
            </td>
            <td>
                @Html.ActionLink("Change", "Edit", new { id = product.ProductId }) |
                @Html.ActionLink("More Info", "Details", new { id = product.ProductId }) |
                @Html.ActionLink("Remove", "Delete", new { id = product.ProductId })
            </td>
        </tr>
    }